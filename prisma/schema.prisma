// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
}

model Project {
  id               Int    @id @default(autoincrement())
  title            String @unique
  category         String
  description      String
  startAmount      String
  endAmount        String
  purpose          String
  execution        String
  paymentStructure String
}

model Grantee {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  phone String @unique
  about String
  links String
}

model FundingStatus {
  id    Int    @id @default(autoincrement())
  title String @unique
}

model HeaderMenu {
  id    Int    @id @default(autoincrement())
  title String
  link  String
}
